    </head>
    <body>
        <h1 id="listPageH1">Whitzo -- Find or list your apartments without fees and brokers</h1>

        <div id="previewPageContainer">
            <div class="header">
                <div id="backHeader">
                    <div id="backButton">
                        <a href="listApartment.html">
                            <%= link_to image_tag("back_button", size: "40x40", alt: "Back to Home"), "/rentals" %>
                        </a>
                    </div>
                    <div id="backText">
                        <h3>Edit Listing</h3>
                    </div>
                </div>
                <div id="centerHeader">
                    <div id="pageTitle">
                        <h3>Listing</h3>
                    </div>
                </div>

            </div>

            <div class="content">
                <div class="leftSideBar">
                    <ul>
                        <li><a href="#about">About</a></li>
                        <li><a href="#details">Details</a></li>
                    </ul>
                </div>

                <div id="previewMyApartmentContent">
                    <div class="listSection" id="about">
                        <h2><%= @rental.title %></h2>
                        <h3 id="address"><%= @rental.address1 %></h3>
                        <h4>$ <%= @rental.price %> per month   <%= @rental.bedrooms %> bedroom(s) <%= @rental.bathrooms %> bathroom(s)</h4>
                         <div class="jcarousel-wrapper">
                            <div class="jcarousel">
                                <ul>
                                    <li><%= image_tag("house1") %></li>
                                    <li><%= image_tag("house2") %></li>
                                    <li><%= image_tag("house3") %></li>
                                    <li><%= image_tag("house4") %></li>
                                    <li><%= image_tag("house5") %></li>
                                    <li><%= image_tag("house6") %></li>
                                    <li><%= image_tag("house7") %></li>
                                </ul>
                            </div>

                            <a href="#" class="jcarousel-control-prev">&lsaquo;</a>
                            <a href="#" class="jcarousel-control-next">&rsaquo;</a>

                            <p class="jcarousel-pagination"></p>
                        </div>
                    </div>

                    <div class="listSection" id="details">
                        <h2>Details</h2>
                        <div id="moveInDetails">
                            <h3>Move In: <%= @rental.move_in %></h3>
                            <h3>Move Out: <%= @rental.move_out %></h3>
                        </div>

                        <iframe
                          width="800"
                          height="450"
                          frameborder="0" style="border:0"
                          src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDPrxhHML8CYWNDEjiuP3LabgQGh1zhzM8
                            &q=<%= @rental.address1 %>" allowfullscreen>
                        </iframe>

                        <table style="margin-top:50px">
                        <tr>
                            <td>Washer / Dryer</td>
                            <td>Dishwasher</td>
                            <td>Storage Space</td>
                            <td>Ceiling Fans</td>
                        </tr>
                        <tr>
                            <td>Outdoor Space</td>
                            <td>Pool</td>
                            <td>Porch</td>
                            <td>Central Air</td>
                        </tr>
                    </table>
                    </div>
                </div>

                <div class="contactInfo">
                    <h2>Contact Info</h2>
                    <h3>Derek Miller</h3>
                    <h3>781-264-8475</h3>
                    <h3><a href="mailto:derekm228@gmail.com"></a></h3>
                    <img src="img/me2.jpg" alt="My Picture">
                    <ul>
                        <li><a href="mailto:derekm228@gmail.com" target="_blank">Send Email</a></li>
                        <li><a href="https://www.facebook.com" target="_blank">Facebook</a></li>
                        <li><a href="http://www.twitter.com" target="_blank">Twitter</a></li>
                        <li><a href="http://www.google.com" target="_blank">Google +</a></li>
                        <li><a href="http://www.linkedin.com" target="_blank">LinkedIn</a></li>
                    </ul>
                </div>

        </div>

        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>


